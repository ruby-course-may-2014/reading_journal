<h1>My favorite books</h1>

<table id="books">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Date of Publication</th>
      <th>Rating</th>
      <th>Description</th>
    </tr>      
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to "#{book.title}", book_path(book) %></td>
        <td><%= book.author %></td>
        <td><%= book.published_at %></td>
        <td><%= book.rating %></td>
        <td>
          <%= truncate(book.description, length: 50, separator: ' ') %><%= link_to "more", book_path(book) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add new book', new_book_path %>
